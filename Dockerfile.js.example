# Stage 1: Build Stage
FROM node:20-alpine AS build
WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .
# Build the application (optional, if you have a build step)
RUN npm run build
# Stage 2: Production Stage
FROM node:20-alpine
WORKDIR /app
COPY --from=build /app /app
# Expose the application's port (if applicable)
EXPOSE 3000
# Run the application
CMD ["node", "server.js"]
